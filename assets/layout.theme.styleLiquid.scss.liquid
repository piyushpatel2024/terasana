.logo_section{
  background-color: #1b3c3b;
  position: relative;
  z-index: 1;
  padding: 50px 0;
  @media(max-width: 767px){
    padding: 25px 0;
  }
  .logo_cols{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    img{
      max-width: 150px;
      max-height: 100px;
      @media(max-width: 600px){
        max-width: 100%;
        padding: 0 10px;
      }
    }
  }
  h2{
    color: #64ccc9;
    text-transform: uppercase;
    margin: 0;
  }
  .logo_container{
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    padding: 0 20px;
    @media(max-width: 991px){
      display: block;
      text-align: center;
    }
  }
  .logo_col{
    max-width: 20%;
    flex: 0 0 20%;  
    @media(max-width: 991px){
      max-width: 100%;
      flex: 0 0 100%; 
      margin-bottom: 10px;
    }
  }
  .logo_cols{
    max-width: 80%;
    flex: 0 0 80%;
    @media(max-width: 991px){
      max-width: 100%;
      flex: 0 0 100%;
    }
    .logo_colss{
      @media(max-width: 991px){
        max-width: 33.33%;
        flex: 0 0 33.33%;
      }
      @media(max-width: 600px){
        padding:10px 0;
      }
    }
  }
}
.testimonial_section{
  position: relative;
  z-index: 1;
  padding: 250px 0 50px;
  background-color: #fff;
  @media(max-width: 767px){
    padding: 100px 0 30px; 
  }
  .testimonial_cols{
    .testimonial_col{
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      justify-content: space-between;
      @media(max-width: 767px){
        display: block;
      }
    }
    .logo_testimonial{
      max-width: 25%;
      flex: 0 0 25%;
      @media(max-width: 767px){
        max-width: 100%;
        flex: 0 0 100%;
      }
      .testimonial_img{
        width: 200px;
        height: 200px;
        position: relative;
        overflow: hidden;
        margin: 0 auto;
        @media(max-width: 767px){
          width: 160px;
          height: 160px;
        }
        img{
          position: absolute;
          top: 0;
          left: 0;
          border-radius: 100%;
          width: 100%;
          height: 100%;
        }
      }
      h2{
        color: #64ccc9;
        text-align: center;
        margin: 10px 0 0;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 2px;
      }
    }
    .testimonial_content{
      max-width: 65%;
      flex: 0 0 65%;
      @media(max-width: 767px){
        max-width: 100%;
        flex: 0 0 100%;
      }
      p{
        font-size: 30px;
        letter-spacing: 0;
        font-weight: 300;
        @media(max-width: 767px){
          font-size: 20px;	 
        }
      }
    }
  }
  .testimonial_container{
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }
  @media(max-width: 767px){
    .slick-arrow{
      display: none !important;
    }
  }
}

