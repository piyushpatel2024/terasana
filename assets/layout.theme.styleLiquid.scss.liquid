.home_feature_products{
  position:relative;
  background-color:#e9efee;
  min-height:700px;
  .page-width{
    max-width:794px;
    padding:30px 2.0833333333333335rem;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    position:absolute;
    top:50%;
    transform:translateY(-50%);
    left: 0;
    right: 0;
    text-align:center;  
    @media screen and (max-width: 767px) {
      padding:30px 18px;
    }
  }
  .content_grid{
    h2{
      margin-top: 0;
      color: #1c3d3a;
      font-size: 29px;
      margin-bottom: 24px;
      font-weight: 600;
      line-height: 25px;
      padding: 0px 14px;
      @media screen and (max-width: 991px) {
        font-size: 26px;
      }
      @media screen and (max-width: 767px) {
        font-size: 24px;
      }
      @media screen and (max-width: 475px) {
        font-size: 22px;
      }
      @media screen and (max-width: 375px) {
        font-size: 21px;
      }
    }
    .product_grid{
      display:flex;
      .product_col{
        flex: 0 0 33.33%;
        max-width:33.33%;
        padding:2.0833333333333335rem;
        .pro_image{
          img{
            max-width: 100%;
            display: block;
            max-height: 320px;
            @media screen and (max-width: 560px) {
              min-height: 220px;
              min-width: 140px;
              transform: scale(1.2);
              width: 100%;
              transform-origin: right;
              -webkit-transform-origin-x: right;
              object-fit: contain;
            }
          }
          @media screen and (max-width: 560px) {
            overflow:hidden;
          }
        }
        h4{
          font-size: 20px;
          margin: 10px 0;
          @media screen and (max-width: 767px) {
            font-size: 18px;
          }
          @media screen and (max-width: 560px) {
            font-size: 15px;
          }
          @media screen and (max-width: 375px) {
            font-size: 12px;
          }
        }
        p{
          text-transform: uppercase;
          font-weight: 500;
          letter-spacing: 1.4px;
          line-height: 10px;
          @media screen and (max-width: 767px) {
            font-size: 11px;
          }
          @media screen and (max-width: 560px) {
            font-size: 9px;
            letter-spacing: 0.5px;
          }
          @media screen and (max-width: 375px) {
            font-size: 8px;
            letter-spacing: 1.4px;
            margin-bottom:15px;
            word-break: break-all;
          }
        }
        .add_to_cart_form{
          .btn{
            position: relative;
            background-color: #64ccc9;
            padding-left: 3rem;
            padding-right: 3rem;
            color: #fff;
            font-size: 1.5rem;
            height: 50px;
            width: 100%;
            border-radius: 9999px;
            border:none;
            font-weight: 600;
            &:hover{
              background-color: #fff;
              color:#64ccc9;
              border:2px solid #64ccc9;
            }
            @media screen and (max-width: 767px) {
              padding-left: 2rem;
              padding-right: 2rem;
              font-size: 15px;
            }
            @media screen and (max-width: 560px) {
              padding-left: 1rem;
              padding-right: 1rem;
              font-size: 14px;
              height: auto;
            }
            @media screen and (max-width: 475px) {
              padding-left: 10px;
              padding-right: 10px;
              font-size: 12px;
            }
            @media screen and (max-width: 425px) {
              padding-left: 5px;
              padding-right: 5px;
              font-size: 11px;
            }
            @media screen and (max-width: 375px) {
              padding-left: 3px;
              padding-right: 3px;
              font-size: 10px;
            }
          }
        }
        &:hover{
          transform: scale(1.05);
        }
        @media screen and (max-width: 767px) {
          padding:10px;
        }
        @media screen and (max-width: 560px) {
          padding:5px;
        }
      }
      @media screen and (max-width: 991px) {
      }
    }
  }
  @media screen and (max-width: 991px) {
    min-height:700px;
  }
  @media screen and (max-width: 560px) {
    min-height:600px;
  }
}
