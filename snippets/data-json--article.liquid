{% comment %} Array {% endcomment %}
{%- capture article_tags %}
  {% if article.tags.length > 0 %}
    {%- for a_tag in article.tags -%}
        {%- if forloop.length == 1 -%}
            ["{{ a_tag }}"]
        {% else %}
            {%- if forloop.first == true -%}
                ["{{ a_tag }}",
                {%- elsif forloop.last == true -%}
                "{{ a_tag }}"]
            {%- else -%}
                "{{ a_tag }}",
            {%- endif -%}
        {%- endif -%}
    {%- endfor -%}
  {% else %}
    []
  {% endif %}
{%- endcapture -%}


