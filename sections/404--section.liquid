<section 
  data-section-id="{{ section.id }}" 
  data-section-type="404"
  data-vue-settings="{{ section.settings | json | url_escape }}">
  
  <div id="vue-404"></div>  
</section>

{% schema %}
{
  "name": {
    "en": "404 Settings"
  },
  "settings": [
    {
      "type": "select",
      "id": "section_theme",
      "label": {
        "en": "Color theme (todo)"
      },
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": {
            "en": "Light Background"
          }
        },
        {
          "value": "light-alt",
          "label": {
            "en": "Alt Light Background"
          }
        },
        {
          "value": "dark-alt",
          "label": {
            "en": "Alt Dark Background"
          }
        },
        {
          "value": "dark",
          "label": {
            "en": "Dark background"
          }
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_back_link",
      "label": {
          "en": "Show back link"
      },
      "default": true
    }
  ]
}
{% endschema %}